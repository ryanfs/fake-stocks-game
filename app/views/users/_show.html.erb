<div class="row">
  <div class="container">
    <h3>Make a trade: <a href="#" id="sell">Sell!</a></h3>
    <%= render partial: "trades/new" %>
  </div>
</div>

<div class="col-md-3">
  <div class="dashboard-div-wrapper bk-clr-three">
    <div class="component-header">El Banco</div>
      <h4>$<%= current_user.cash %></h4>
  </div>
</div>

<div class="col-md-6" id="my-portfolio">
  <div class="notice-board">
    <div class="panel panel-default">
      <div class="panel-heading">Portfolio
        <div class="pull-right">
          <i class="glyphicon glyphicon-repeat"></i>
        </div>
      </div>
        <div class="panel-body">
          <ul>
            <% my_portfolio.each do |item| %>
            <% if item != 0 %>
              <li><%= item.html_safe %></li>
            <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

<%= render partial: "sales/new" %>

