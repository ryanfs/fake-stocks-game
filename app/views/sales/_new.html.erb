<a href="#" id="sell">Sell!</a>
<section id="make_trade_sell">
  <%= form_for :sales, :url => {:action => :create, :controller => :sales} do |f| %>
  <fieldset>
    <legend>Sell off your stocks</legend>
      <div>
        <% my_stocks.each do |stock| %>
          <%= f.text_field stock.name, :placeholder => 'Quantity' %><%= stock.name %> </br />
        <% end %>
        <%= f.submit 'Place order' %>
      </div>
  </fieldset>
  <% end %>
</section>
